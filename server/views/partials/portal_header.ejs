  <style>
    :root {
      --bg: #f3f6fb;
      --panel: #ffffff;
      --text: #172033;
      --muted: #6b7280;
      --primary: #3b82f6;
      --primary-soft: #e8f1ff;
      --border: #e5eaf3;
      --shadow: 0 8px 26px rgba(30, 41, 59, 0.06);
    }

    * { box-sizing: border-box; }

    body {
      font-family: Inter, system-ui, Segoe UI, Arial, "PingFang SC", "Microsoft YaHei", sans-serif;
      margin: 0;
      background: linear-gradient(180deg, #f8faff 0%, var(--bg) 100%);
      color: var(--text);
    }

    a { color: #2563eb; text-decoration: none; }

    .top {
      position: sticky;
      top: 0;
      z-index: 20;
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 14px 18px;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(6px);
      border-bottom: 1px solid var(--border);
    }

    .brand {
      font-weight: 800;
      letter-spacing: .2px;
    }

    .grid {
      display: grid;
      grid-template-columns: 250px 1fr;
      min-height: calc(100vh - 60px);
    }

    .side {
      background: var(--panel);
      border-right: 1px solid var(--border);
      padding: 16px;
    }

    .menu-title {
      color: var(--muted);
      font-size: 12px;
      letter-spacing: 0.4px;
      text-transform: uppercase;
      margin: 10px 8px;
    }

    .item {
      display: block;
      padding: 10px 12px;
      border-radius: 10px;
      margin-bottom: 6px;
      color: var(--text);
      transition: .2s ease;
    }

    .item:hover { background: #f5f9ff; transform: translateX(2px); }
    .item.active { background: var(--primary-soft); color: #1d4ed8; font-weight: 700; }

    .main { padding: 20px; }

    .card {
      background: var(--panel);
      border: 1px solid var(--border);
      border-radius: 14px;
      padding: 16px;
      box-shadow: var(--shadow);
    }

    table { width: 100%; border-collapse: collapse; background: #fff; }
    th { background: #f8fafc; color: #475569; font-weight: 700; }
    th, td { padding: 10px; border-bottom: 1px solid var(--border); text-align: left; vertical-align: top; }

    .btn {
      background: var(--primary);
      color: #fff;
      padding: 8px 14px;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      font-weight: 600;
    }
    .btn:hover { background: #2563eb; }

    .btn-ghost {
      background: #fff;
      color: #2563eb;
      border: 1px solid #cde0ff;
    }

    .pill {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      padding: 5px 10px;
      border-radius: 999px;
      background: #eef4ff;
      color: #1e3a8a;
      border: 1px solid #dbe8ff;
      font-size: 12px;
      font-weight: 600;
    }

    input, select, textarea {
      border: 1px solid #d1d9e6;
      background: #fff;
      color: var(--text);
      border-radius: 10px;
      padding: 8px 10px;
    }

    input:focus, select:focus, textarea:focus {
      outline: none;
      border-color: #93c5fd;
      box-shadow: 0 0 0 3px #dbeafe;
    }

