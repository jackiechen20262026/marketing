    "cookie": "^1.0.2",
    "dotenv": "^17.2.2",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "mysql2": "^3.15.0",
    "nanoid": "^5.1.5",
    "xlsx": "^0.18.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^24.7.0",
    "esbuild": "^0.25.0",
    "prettier": "^3.6.2",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "vite": "^7.1.7",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=18"
